{
	"name": "games-on-react",
	"version": "0.3.1",
	"description": "games on react-effector",
	"repository": {
		"type": "git",
		"url": "https://github.com/Komar0ff/games-on-react"
	},
	"keywords": [
		"games",
		"javascript",
		"kotlin",
		"kotlinjs",
		"rust",
		"react",
		"effector"
	],
	"author": {
		"name": "Komar0ff",
		"email": "binary.reptile@gmail.com",
		"url": "https://twitter.com/ilya_komar0ff"
	},
	"license": "WTFPL",
	"bugs": {
		"url": "https://github.com/Komar0ff/games-on-effector/issues"
	},
	"dependencies": {
		"effector": "^22.1.2",
		"effector-react": "^22.0.4",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-hot-loader": "^4.13.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.12.1",
		"@babel/core": "^7.15.8",
		"@babel/plugin-proposal-class-properties": "^7.14.5",
		"@babel/plugin-proposal-pipeline-operator": "^7.15.0",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/plugin-transform-runtime": "^7.15.8",
		"@babel/preset-env": "^7.15.8",
		"@babel/preset-react": "^7.14.5",
		"@babel/runtime": "^7.15.4",
		"@hot-loader/react-dom": "^17.0.1+4.13.0",
		"@testing-library/react": "^12.1.2",
		"@types/react": "^17.0.2",
		"@types/react-dom": "^17.0.1",
		"babel-jest": "^27.3.1",
		"babel-loader": "^8.2.2",
		"clean-webpack-plugin": "^4.0.0",
		"compression-webpack-plugin": "^9.0.0",
		"css-loader": "^6.4.0",
		"fast-async": "^6.3.8",
		"file-loader": "^6.2.0",
		"html-webpack-plugin": "^5.5.0",
		"husky": "^7.0.4",
		"jest": "^27.3.1",
		"jsdom": "^18.0.0",
		"parcel": "2.0.0",
		"prettier": "^2.4.1",
		"pretty-quick": "^3.1.0",
		"style-loader": "^3.3.1",
		"whatwg-fetch": "^3.5.0"
	},
	"scripts": {
		"dev": "parcel index.html",
		"build-dev": "webpack --mode development",
		"build-prod": "webpack --mode production",
		"format": "prettier --write \"src/**/*.js\"",
		"test": "jest --watch",
		"deploy": "yarn build && now ./build"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"jest": {
		"testEnvironment": "jsdom",
		"setupFilesAfterEnv": [
			"<rootDir>/config/jest/setupTests.js"
		],
		"moduleNameMapper": {
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/__mocks__/fileMock.js",
			"\\.(css|scss)$": "<rootDir>/config/jest/__mocks__/styleMock.js"
		},
		"moduleDirectories": [
			"src",
			"node_modules"
		],
		"moduleFileExtensions": [
			"js",
			"json",
			"jsx"
		],
		"transform": {
			"^.+\\.(js|jsx)$": "babel-jest"
		}
	},
	"resolutions": {
		"babel-core": "7.0.0-bridge.0"
	}
}
